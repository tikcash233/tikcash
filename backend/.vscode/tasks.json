{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "backend: install",
			"type": "shell",
			"command": "npm install",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		},
		{
			"label": "backend: migrate",
			"type": "shell",
			"command": "npm run migrate",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			}
		},
		{
			"label": "backend: dev",
			"type": "shell",
			"command": "npm run dev",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": []
		},
		{
			"label": "Run backend migrations",
			"type": "shell",
			"command": "node src/migrate.js",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		}
	]
}