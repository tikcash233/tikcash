# Copy this file to .env and fill in values.
# Production: ALWAYS set strong secrets. Never use dev fallbacks.

# Core
NODE_ENV=development
PORT=5000
DATABASE_URL=postgres://user:pass@host:5432/dbname
JWT_SECRET=change-me-in-production

# Paystack (required for payments)
PAYSTACK_SECRET_KEY=sk_live_xxx
PAYSTACK_PUBLIC_KEY=pk_live_xxx

# Supabase (for profile images bucket)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key-here

# Public app URL (frontend). Used for payment callback URL.
PUBLIC_APP_URL=http://localhost:3000

# CORS allowed origins (comma separated). Include your Netlify domain + custom domain.
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-netlify-site.netlify.app,https://yourdomain.com

# Optional feature flags
VERIFY_EMAIL=false
ENABLE_PAYSTACK_WEBHOOK=true

# Optional admin bootstrap (one of these). If set, that user/email becomes admin automatically.
# ADMIN_USER_EMAIL=admin@example.com
# ADMIN_USER_ID=uuid-here

# Email (Resend) â€“ if you enable email features later
# RESEND_API_KEY=
# RESEND_FROM_EMAIL=TikCash <noreply@yourdomain.com>
